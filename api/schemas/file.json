{
  "type": "object",
  "properties": {
    "_id": {
        "maxLength": 32,
        "minLength": 2,
        "pattern": "^[0-9a-z][0-9a-z.@_-]{0,30}[0-9a-z]$",
        "title": "ID",
        "type": "string"
    },
    "name":           { "type": "string" },
    "created":        { "type": "datetime" },
    "modified":       { "type": "datetime" },
    "type":           { "type": "string" },
    "size":           { "type": "integer" },
    "hash":           { "type": "string" },
    "instrument":     { "type": "string" },
    "unprocessed":    { "type": "boolean"},
    "measurements": {
      "items": { "type": "string"},
      "type": "array",
      "uniqueItems": true
    },
    "tags": {
      "items": { "type": "string"},
      "type": "array",
      "uniqueItems": true
    },
    "metadata": {
      "type": "object"
    }

  },
  "required": ["_id", "user", "text"]
}