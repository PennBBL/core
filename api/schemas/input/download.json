{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Download",
    "type": "object",
    "properties": {
        "optional": {
            "type": "boolean"
        },
        "nodes": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "level": {
                        "type": "string",
                        "enum": ["project", "session", "acquisition"]
                    },
                    "_id": {
                        "type": "string",
                        "pattern": "^[0-9a-f]{24}$"
                    }
                },
                "required": ["level", "_id"],
                "additionalProperties": false
            }
        }
    },
    "required": ["optional", "nodes"],
    "additionalProperties": false
}
