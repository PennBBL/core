{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id":            { "type": "string"},
    "name":           { "type": "string" },
    "created":        {},
    "modified":       {},
    "type":           { "type": "string" },
    "size":           { "type": "integer" },
    "hash":           { "type": "string" },
    "instrument":     { "type": "string" },
    "unprocessed":    { "type": "boolean"},
    "measurements": {
      "items": { "type": "string"},
      "type": "array",
      "uniqueItems": true
    },
    "tags": {
      "items": { "type": "string"},
      "type": "array",
      "uniqueItems": true
    },
    "metadata": {
      "type": "object"
    }
  },
  "required": ["_id", "user", "text"],
  "additionalProperties": false
}
