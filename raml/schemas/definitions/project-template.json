{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A project's session template",
    "type": "object",
    "definitions": {
        "requirement": {
            "anyOf": [
                {"required": ["minimum"]},
                {"required": ["maximum"]}
            ],
            "properties": {
                "schema":   {"$ref": "http://json-schema.org/draft-04/schema"},
                "minimum":  {"type": "integer", "minimum": 0},
                "maximum":  {"type": "integer", "minimum": 0}
            },
            "required": ["schema"]
        },
        "requirement-array": {
            "properties": {
                "requirements": {
                    "type": "array",
                    "minItems": 1,
                    "items": {"$ref": "#/definitions/requirement"}
                },
                "minimum":  {"type": "integer", "minimum": 0},
                "maximum":  {"type": "integer", "minimum": 0}
            },
            "required": ["requirements"]
        }
    },
    "properties": {
        "session": {
            "properties": {
                "schema":   {"$ref": "http://json-schema.org/draft-04/schema"},
            },
            "required": ["schema"]
        },
        "acquisitions": {"$ref": "#/definitions/requirement-array"},
        "files": {"$ref": "#/definitions/requirement-array"}
    },
    "additionalProperties": false
}
