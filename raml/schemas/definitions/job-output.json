{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "inputs": {
      "type":"array",
      "items":{
        "type": "object",
        "properties": {
          "input":{
            "type":"string"
          },
          "type": {
            "type": "string"
          },
            "id": {
              "type": "string"
            },
              "name": {
                "type": "string"
              }
        },
        "required": [
          "type",
          "id",
          "name"
        ],
        "additionalProperties":false
      }
    },
    "destination": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "id"
      ],
      "additionalProperties":false
    },
    "origin": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": ["string", "null"]
        }
      },
      "required": [
        "type",
        "id"
      ],
      "additionalProperties":false
    },
    "saved_files": {
      "type": "array",
      "items": {"$ref": "../mongo/file.json"}
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "allOf":[
    {"$ref":"created-modified.json#"}
  ]
}
