classdef ModelBase < matlab.mixin.CustomDisplay
    properties
        props_
        propMap_
    end
    methods
        function obj = ModelBase(propertyMap)
            obj.props_ = containers.Map;
            obj.propMap_ = propertyMap;
        end
        function sref = subsref(obj, s)
            if s(1).type == '.'
                if isempty(obj.propMap_)
                    if isKey(obj.props_, s(1).subs)
                        sref = obj.props_(s(1).subs);
                        if length(s) > 1
                            sref = subsref(sref, s(2:end));
                        end
                    else
                        sref = builtin('subsref', obj, s);
                    end
                else
                    if isKey(obj.propMap_, s(1).subs)
                        sref = obj.props_(obj.propMap_(s(1).subs));
                        if length(s) > 1
                            sref = subsref(sref, s(2:end));
                        end
                    else
                        sref = builtin('subsref', obj, s);
                    end
                end
            else
                error('subsref', 'Not a supported subscripted reference')
            end
        end
        function obj = subsasgn(obj, s, val)
            if s(1).type == '.'
                obj = ModelBase.recursiveAsgn(obj, s, val);
            else
                error('subsasgn', 'Not a supported subscripted reference')
            end
        end
    end
    methods(Static)
        % TODO: Is there a better way to do this?
        function obj = recursiveAsgn(obj, s, val)
            if isempty(s)
                obj = val;
            else
                subs = s(1).subs;
                if s(1).type == '.'
                    if isa(obj, 'ModelBase')
                        if isempty(obj.propMap_)
                            if isKey(obj.props_, subs)
                                obj.props_(subs) = ModelBase.recursiveAsgn(obj.props_(subs), s(2:end), val);
                            else
                                obj = builtin('subsasgn', obj, s, val);
                            end
                        else
                            if isKey(obj.propMap_, subs)
                                propName = obj.propMap_(subs);
                                obj.props_(propName) = ModelBase.recursiveAsgn(obj.props_(propName), s(2:end), val);
                            else
                                error('subsasgn', 'No property ' + subs + ' exists for class ' + class(obj));
                            end
                        end
                    else
                        obj.(subs) = ModelBase.recursiveAsgn(obj.(subs), s(2:end), val);
                    end
                elseif s(1).type == '{}'
                    if length(subs) > 1
                        error('subsasgn', 'Not a supported subscript annotation')
                    end
                    obj{subs{1}} = ModelBase.recursiveAsgn(obj{subs{1}}, s(2:end), val);
                else
                    for i = 1:length(subs)
                        obj(subs{i}) = ModelBase.recursiveAsgn(obj(subs{i}), s(2:end), val);
                    end
                end
            end
        end
        function result = cellmap(pred, list)
            if isstruct(list)
                result = arrayfun(pred, list, 'UniformOutput', false);
            elseif iscell(list)
                result = cellfun(pred, list, 'UniformOutput', false);
            else
                result = { pred(list) };
            end
        end
    end
end
